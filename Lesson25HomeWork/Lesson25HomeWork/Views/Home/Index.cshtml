@using Lesson25HomeWork.Models;
@model IndexFormModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Я ем спаржу</h1>
    
    </div>
        <form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Я съел спаржу!" class="btn btn-default" />
    </div>
    <div class="text-end">
        <a asp-action="ISeeYou" asp-controller="Home">Посмотреть кто уже съел спаржу</a>
    </div>
    
</form>