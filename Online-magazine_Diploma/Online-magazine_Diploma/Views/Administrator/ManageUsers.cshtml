@using Online_magazine_Diploma.Models.AdministratorModels;
@model ManageUsersViewModel[]

<h1>Управление аккаунтами пользователей</h1>


	<p>
		<table class="table">
			<tr>
				<td>Name</td>
				<td>Email</td>
				<td>Изменить Роль</td>
				<td>Удалить</td>
			</tr>

			@foreach (var p in Model)
			{
				<tr>
					<td>@p.Name</td>
					<td>@p.Email</td>
				<td>
					<a asp-action="EditUserRole" asp-controller="Administrator" asp-route-id="@p.Id">@p.UserRole</a>
					
				</td>
				<td>
					@if (p.IsDeleted != true)
					{
						<form method="post" asp-action="DeleteUserPost" asp-controller="Administrator" asp-route-id="@p.Id">
							<input type="submit" value=" Удалить пользователя " />
						</form>
					}
					else
					{
						<div>Удалён</div>
					}
				</td>
				</tr>
			}

		</table>
	</p>

	
